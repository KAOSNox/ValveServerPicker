<mah:MetroWindow
    x:Class="ValveServerPicker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="800"
    mc:Ignorable="d"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    ResizeMode="NoResize"
    Title="ValveServerPicker">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.9,0.9" StartPoint="0.1,0.1">
                <GradientStop Color="#FF3494E6" Offset="-0.3"/>
                <GradientStop Color="#FFEC6EAD" Offset="1.3"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid
            x:Name="titleBar"
            Height="40px"
            VerticalAlignment="Top"
            Background="#66000000"
            MouseLeftButtonDown="titleBar_MouseLeftButtonDown" Grid.ColumnSpan="2">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Valve Server Picker"
                FontSize="18px"
                FontWeight="SemiBold"
                Foreground="White" />
            <Button
                x:Name="btnMinimizar"
                Width="20px"
                Height="20px"
                Margin="0,0,40,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#FFFAE800"
                BorderBrush="{x:Null}"
                MouseEnter="btnMinimizar_MouseEnter"
                MouseLeave="btnMinimizar_MouseLeave"
                Click="btnMinimizar_MouseClick"
                Style="{DynamicResource MahApps.Styles.Button.Circle}" />
            <Button
                x:Name="btnCerrar"
                Width="20px"
                Height="20px"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="#FFFC4850"
                BorderBrush="{x:Null}"
                MouseEnter="btnCerrar_MouseEnter"
                MouseLeave="btnCerrar_MouseLeave"
                Click="btnCerrar_MouseClick"
                Style="{DynamicResource MahApps.Styles.Button.Circle}" />
        </Grid>

        <!--- Header top -->
        <Grid VerticalAlignment="top" Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Nombre" Foreground="White" FontSize="22px" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
            <Label Grid.Column="1" Content="Ping" Foreground="White" FontSize="22px" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="2" Content="TF2" Foreground="White" FontSize="22px" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="3" Content="CSGO" Foreground="White" FontSize="22px" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0 0 0 1"></Border>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0 0 0 1"></Border>
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 0 0 1"></Border>
            <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0 0 0 1"></Border>
        </Grid>

        <!---Servers Contenedor-->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Margin="0,80,0,40">
            <StackPanel x:Name="ServersContenedor" Orientation="Vertical">
            </StackPanel>
        </ScrollViewer>
        <mah:ProgressRing x:Name="CargandoIcon" Visibility="Collapsed" Foreground="#FFF" IsActive="True" />

        <Grid Background="#66000000" VerticalAlignment="Bottom" Height="40px">
            <TextBlock Text="By KAOSNox" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" FontSize="14" Margin="0,0,20,0" />
        </Grid>

    </Grid>
</mah:MetroWindow>